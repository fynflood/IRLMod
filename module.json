{
  "id": "irlmod",
  "title": "IRLMod",
  "description": "A module to display and manage a dedicated player view on a secondary touchscreen display for in-person games.",
  "version": "0.3.0",
  "compatibility": {
    "minimum": "12", 
    "verified": "13"
  },
  "authors": [
    {
      "name": "fynflood",
      "email": "fynflood@gmail.com",
      "url": ""
    }
  ],
  "url": "https://github.com/fynflood/IRLMod",
  "esmodules": [
    "gm-screen.js",
    "player-client.js"
  ],
  "styles": [
    "css/irlmod-styles.css"
  ],
  "languages": [
    {
      "lang": "en",
      "name": "English",
      "path": "languages/en.json"
    }
  ],
  "socket": true,
  "settings": [
    {
      "name": "Dedicated Player Username",
      "hint": "Enter the exact username of the player account that will be used for the IRL Player View. This user should ideally have no password for easier (though still manual) login via the /join URL.",
      "key": "dedicatedPlayerUsername",
      "type": "String",
      "default": "ScreenGoblin",
      "scope": "world",
      "config": true
    }
  ],
  "manifest": "https://github.com/fynflood/IRLMod/releases/download/v0.3.0/module.json",
  "download": "https://github.com/fynflood/IRLMod/releases/download/v0.3.0/irlmod.zip",
  "protected": false,
  "license": "LICENSE.txt"
}
